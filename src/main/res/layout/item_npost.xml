<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">

        <ImageView
            android:id="@+id/iv_touxiang_npost"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mytouxiang" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/item_tv_post_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_tv_post_time"
                android:paddingTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/item_tv_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text=""
        android:textColor="#000000"
        android:layout_marginLeft="45dp"
        />

    <GridView
        android:id="@+id/item_gv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:verticalSpacing="2dp"
        android:divider="@null">
    </GridView>

    <LinearLayout
        android:id="@+id/item_ll_post_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:src="@drawable/comment" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="评论"
            android:layout_marginTop="-3dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#F2F2F2"
        android:layout_height="10dp"
        android:layout_marginTop="2dp"/>

</LinearLayout>